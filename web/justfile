# List available commands
[group('meta')]
default:
    just --list --unsorted

# Run dev server
[group('development')]
dev: prepare
    bun run dev

# Prepare project for development
[group('development')]
prepare: install-modules

# Install modules
[group('development')]
install-modules:
    bun install

# Type check
[group('quality')]
typecheck:
    bun run typecheck

# Run all quality checks
[group('quality')]
quality: prepare typecheck

# Run all verification checks
[group('quality')]
ready: quality
